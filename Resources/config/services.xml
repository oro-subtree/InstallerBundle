<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
    http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oro.installer.scenario.class">Oro\Bundle\InstallerBundle\Process\InstallerScenario</parameter>
        <parameter key="oro.requirements.class">Oro\Bundle\InstallerBundle\Requirement\OroRequirements</parameter>
        <parameter key="oro.requirements.settings.class">Oro\Bundle\InstallerBundle\Requirement\SettingsRequirements</parameter>
        <parameter key="oro.requirements.extensions.class">Oro\Bundle\InstallerBundle\Requirement\ExtensionsRequirements</parameter>
        <parameter key="oro.requirements.filesystem.class">Oro\Bundle\InstallerBundle\Requirement\FilesystemRequirements</parameter>
        <parameter key="oro.form.type.configuration.class">Oro\Bundle\InstallerBundle\Form\Type\ConfigurationType</parameter>
        <parameter key="oro.form.type.configuration.database.class">Oro\Bundle\InstallerBundle\Form\Type\Configuration\DatabaseType</parameter>
        <parameter key="oro.form.type.configuration.mailer.class">Oro\Bundle\InstallerBundle\Form\Type\Configuration\MailerType</parameter>
        <parameter key="oro.form.type.configuration.locale.class">Oro\Bundle\InstallerBundle\Form\Type\Configuration\LocaleType</parameter>
        <parameter key="oro.form.type.configuration.hidden.class">Oro\Bundle\InstallerBundle\Form\Type\Configuration\HiddenType</parameter>
        <parameter key="oro.form.type.setup.class">Oro\Bundle\InstallerBundle\Form\Type\SetupType</parameter>
        <parameter key="oro.installer.yaml_persister.class">Oro\Bundle\InstallerBundle\Persister\YamlPersister</parameter>
    </parameters>

    <services>
        <service id="oro_installer.scenario" class="%oro.installer.scenario.class%">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <tag name="sylius.process.scenario" alias="oro_installer" />
        </service>

        <service id="oro.requirements" class="%oro.requirements.class%">
            <argument type="collection">
                <argument type="service">
                    <service class="%oro.requirements.settings.class%">
                        <argument type="service" id="translator" />
                    </service>
                </argument>
                <argument type="service">
                    <service class="%oro.requirements.extensions.class%">
                        <argument type="service" id="translator" />
                    </service>
                </argument>
                <argument type="service">
                    <service class="%oro.requirements.filesystem.class%">
                        <argument type="service" id="translator" />
                        <argument>%kernel.root_dir%</argument>
                    </service>
                </argument>
            </argument>
        </service>

        <service id="oro.form.type.configuration" class="%oro.form.type.configuration.class%">
            <tag name="form.type" alias="oro_configuration" />
        </service>

        <service id="oro.form.type.configuration.database" class="%oro.form.type.configuration.database.class%">
            <tag name="form.type" alias="oro_configuration_database" />
        </service>

        <service id="oro.form.type.configuration.mailer" class="%oro.form.type.configuration.mailer.class%">
            <tag name="form.type" alias="oro_configuration_mailer" />
        </service>

        <service id="oro.form.type.configuration.locale" class="%oro.form.type.configuration.locale.class%">
            <tag name="form.type" alias="oro_configuration_locale" />
        </service>

        <service id="oro.form.type.configuration.hidden" class="%oro.form.type.configuration.hidden.class%">
            <tag name="form.type" alias="oro_configuration_hidden" />
        </service>

        <service id="oro.form.type.setup" class="%oro.form.type.setup.class%">
            <!--argument>%oro.model.user.class%</argument-->
            <argument>%oro_user.entity.class%</argument>
            <tag name="form.type" alias="oro_setup" />
        </service>

        <service id="oro.installer.yaml_persister" class="%oro.installer.yaml_persister.class%">
            <argument>%kernel.root_dir%/config/parameters.yml</argument>
        </service>
    </services>

</container>
